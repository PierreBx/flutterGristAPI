# Base backup directory
BACKUP_BASE_DIR="{{ backup_base_dir }}"

# Retention periods (in days)
RETENTION_DAILY="{{ backup_retention_daily }}"
RETENTION_WEEKLY="{{ backup_retention_weekly }}"
RETENTION_MONTHLY="{{ backup_retention_monthly }}"

# Data directories
GRIST_DATA_DIR="{{ grist_data_dir | default('/opt/grist/data') }}"
APP_CONFIG_DIR="{{ app_config_dir | default('/opt/flutter_grist_app/config') }}"

# Remote backup settings
{% if remote_backup_enabled | default(false) %}
REMOTE_BACKUP_ENABLED=true
REMOTE_BACKUP_USER="{{ remote_backup_user }}"
REMOTE_BACKUP_HOST="{{ remote_backup_host }}"
REMOTE_BACKUP_PATH="{{ remote_backup_path }}"
{% else %}
REMOTE_BACKUP_ENABLED=false
{% endif %}

# Cloud backup settings
{% if cloud_backup_enabled | default(false) %}
CLOUD_BACKUP_ENABLED=true
CLOUD_BACKUP_REMOTE="{{ cloud_backup_remote }}"
CLOUD_BACKUP_BUCKET="{{ cloud_backup_bucket }}"
{% else %}
CLOUD_BACKUP_ENABLED=false
{% endif %}
